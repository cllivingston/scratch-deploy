{% if openpbs_type == 'client' %}
PBS_SERVER={{ openpbs_default_server }}
PBS_START_SERVER=0
PBS_START_SCHED=0
PBS_START_COMM=0
PBS_START_MOM=1
PBS_EXEC={{ openpbs_install_dir }}
PBS_HOME={{ openpbs_server_home }}
PBS_CORE_LIMIT=unlimited
PBS_SCP=/usr/bin/scp
{% endif %}
{% if openpbs_type == 'server' %}
PBS_SERVER={{ openpbs_default_server }}
PBS_START_SERVER=1
PBS_START_SCHED=1
PBS_START_COMM=1
PBS_START_MOM=0
PBS_EXEC={{ openpbs_install_dir }}
PBS_HOME={{ openpbs_server_home }}
PBS_CORE_LIMIT=unlimited
PBS_SCP=/usr/bin/scp
{% endif %}